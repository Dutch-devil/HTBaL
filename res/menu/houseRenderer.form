form houseRenderer {
    // Form properties.
    theme                  = res/menu/default.theme
    autoWidth              = true
    autoHeight             = true
    style                  = title
	layout = LAYOUT_VERTICAL
	consumeInputEvents = false
	

    // All the Controls within this Form.
	container {
		height = 40
	}
    button mainMenuButton {
		style = buttonHover
		text = Main Menu
		group = formSelection
		height = 60
		alignment              = ALIGN_RIGHT
		consumeInputEvents = false
	}
    button refreshButton : mainMenuButton {
		text = Refresh
	}
    button clearButton : mainMenuButton {
		text = Clear
	}
    button floorUpButton : mainMenuButton {
		text = Floor up
	}
    button floorDownButton : mainMenuButton {
		text = Floor down
	}
}