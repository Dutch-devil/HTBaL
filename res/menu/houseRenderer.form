form houseRenderer {
    // Form properties.
    theme                  = res/menu/default.theme
    autoWidth              = true
    autoHeight             = true
    style                  = title
	layout = LAYOUT_VERTICAL
	

    // All the Controls within this Form.
    button mainMenuButton {
		style = buttonHover
		text = Main Menu
		group = formSelection
		size = 480, 60
		alignment              = ALIGN_RIGHT
	}
}