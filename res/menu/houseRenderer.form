form houseRenderer {
    // Form properties.
    theme                  = res/menu/default.theme
    autoWidth              = true
    autoHeight             = true
    style                  = title
	layout = LAYOUT_VERTICAL
	

    // All the Controls within this Form.
	container {
		height = 40
	}
    button mainMenuButton {
		style = buttonHover
		text = Main Menu
		group = formSelection
		height = 60
		alignment              = ALIGN_RIGHT
	}
    button refreshButton : mainMenuButton {
		text = Refresh
	}
}